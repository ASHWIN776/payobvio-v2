// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int      @id @default(autoincrement()) @map("user_id")
  username  String   @unique @db.VarChar(50) @map("username")
  email     String   @unique @db.VarChar(100) @map("email")
  role      Role     @default(CONTRIBUTOR) @map("role")
  joined_at DateTime @default(now()) @map("joined_at")

  @@map("users")
}

enum Role {
  MAINTAINER
  CONTRIBUTOR
}